pipeline {
    agent any
  
    stages {
        stage('Install dependencies') {
            steps {
                bat 'npm install'
            }
        }
  
    stage('Checkout') {
      steps {
             bat 'npm run test'
      }
    }
    }

post {
    always {
        archiveArtifacts artifacts: 'playwright-report/**', allowEmptyArchive: true
    }
    failure {
        echo 'Tests failed! Check the report.'
    }
}

}
    
